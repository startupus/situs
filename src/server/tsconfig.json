{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "useDefineForClassFields": false,
    "outDir": "../../dist",
    "rootDir": "../",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false
  },
  "include": ["../server/**/*.ts", "../types/**/*.ts", "../validation/**/*.ts"],
  "exclude": ["../../dist", "./build.ts", "**/*.spec.ts", "**/*.test.ts"]
}
