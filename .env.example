# ============================================
# API Server Configuration (Strapi-inspired)
# ============================================

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/situs_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="7d"

# Server Configuration
NODE_ENV="development"
PORT=3001
API_HOST="localhost"
API_URL="http://localhost:3001"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Prisma Configuration
PRISMA_HIDE_UPDATE_MESSAGE=true
PRISMA_GENERATE_DATAPROXY=false

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/api.log"

# File Upload Configuration (for future use)
UPLOAD_MAX_SIZE="10mb"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Email Configuration (for future use)
EMAIL_PROVIDER="smtp"
EMAIL_HOST=""
EMAIL_PORT=587
EMAIL_USER=""
EMAIL_PASS=""
EMAIL_FROM="noreply@situs.local"

# Redis Configuration (for future caching)
REDIS_URL="redis://localhost:6379"
REDIS_TTL=3600

# Admin Configuration
ADMIN_EMAIL="admin@situs.local"
ADMIN_PASSWORD="Admin123!"
ADMIN_FIRST_NAME="Admin"
ADMIN_LAST_NAME="User"

# Development Configuration
DEV_MODE=true
SEED_DATABASE=true
ENABLE_SWAGGER=true
ENABLE_CORS=true