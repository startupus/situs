{
  "name": "situs-visual-website-builder",
  "version": "1.0.0",
  "description": "Специализированный визуальный редактор для создания веб-сайтов с drag-and-drop интерфейсом",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:storybook": "test-storybook",
    "test:visual": "playwright test --config=playwright-visual.config.ts",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix src --ext ts,tsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "check-components": "node scripts/check-components.cjs",
    "create-component": "node scripts/create-component.cjs",
    "migrate-components": "node scripts/migrate-components.cjs",
    "bulk-migrate": "node scripts/bulk-migrate-tailgrids.cjs",
    "test-components": "npm run check-components && npm run test"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-accordion": "^1.2.4",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.5",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.5",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.5",
    "@radix-ui/react-slot": "^1.1.5",
    "@radix-ui/react-switch": "^1.1.5",
    "@radix-ui/react-tabs": "^1.1.5",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "react": "^18.3.1",
    "react-bricks": "^4.7.5",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "react-i18next": "^15.1.5",
    "react-router-dom": "^6.20.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@playwright/test": "^1.41.0",
    "@storybook/addon-essentials": "^8.5.4",
    "@storybook/addon-interactions": "^8.5.4",
    "@storybook/addon-links": "^8.5.4",
    "@storybook/addon-onboarding": "^8.5.4",
    "@storybook/blocks": "^8.5.4",
    "@storybook/react": "^8.5.4",
    "@storybook/react-vite": "^8.5.4",
    "@storybook/test": "^8.5.4",
    "@storybook/test-runner": "^0.16.0",
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-storybook": "^0.11.1",
    "postcss": "^8.5.4",
    "storybook": "^8.5.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^6.0.8",
    "vitest": "^2.1.8"
  }
}
