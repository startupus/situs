# =============================================================================
# SITUS PLATFORM - PRODUCTION ENVIRONMENT
# =============================================================================

# Основные настройки приложения
NODE_ENV=production
PORT=3002

# База данных (PostgreSQL в production)
DATABASE_URL=postgresql://situs:situs_password@localhost:5432/situs?schema=public
DB_HOST=localhost
DB_PORT=5432
DB_NAME=situs
DB_USER=situs
DB_PASSWORD=situs_password

# JWT настройки
JWT_SECRET=prod_secret_change_me_32_chars_minimum_1234567890
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# CORS настройки для production
CORS_ORIGINS=https://situs.com,https://www.situs.com,https://app.situs.com

# Логирование
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration для фронтенда
VITE_API_BASE_URL=https://api.situs.com
VITE_USERS_API_URL=https://api.situs.com
VITE_GATEWAY_API_URL=https://api.situs.com

# Production режим
VITE_ENV=production

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================

# Redis настройки
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# TailGrids плагин
TG_PLUGIN=on

# =============================================================================
# PATH CONFIGURATION
# =============================================================================

# API URLs
API_BASE_URL=https://api.situs.com
API_INTERNAL_URL=https://api.situs.com

# Frontend URLs
FRONTEND_BASE_URL=https://situs.com
FRONTEND_INTERNAL_URL=https://situs.com

# Static files
STATIC_BASE_URL=https://cdn.situs.com
STATIC_INTERNAL_URL=https://cdn.situs.com

# Media files
MEDIA_BASE_URL=https://media.situs.com
MEDIA_INTERNAL_URL=https://media.situs.com

# WebSocket
WS_BASE_URL=wss://ws.situs.com
WS_INTERNAL_URL=wss://ws.situs.com

# SSE
SSE_BASE_URL=https://api.situs.com/realtime
SSE_INTERNAL_URL=https://api.situs.com/realtime

# File system paths
UPLOADS_PATH=/var/situs/uploads
STATIC_PATH=/var/situs/public
TEMP_PATH=/tmp/situs
LOGS_PATH=/var/log/situs