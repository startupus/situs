{
  "watch": ["src/**/*"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "dist/**/*",
    "node_modules/**/*",
    "coverage/**/*",
    "logs/**/*"
  ],
  "exec": "node --loader ts-node/esm src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}