# =============================================================================
# SITUS PLATFORM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Скопируйте этот файл в .env и настройте под ваше окружение
# cp env.example .env

# Основные настройки приложения
NODE_ENV=development
PORT=3002

# База данных
DATABASE_URL="postgresql://situs:situs123@localhost:5433/situs_db?schema=public"

# JWT Secret (минимум 32 символа)
JWT_SECRET=your_jwt_secret_here_change_in_production_minimum_32_characters_long

# CORS настройки (разделенные запятыми)
# Для development можно указать несколько origins
CORS_ORIGINS=http://localhost:5177,http://localhost:3000,http://localhost:4000

# Логирование
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Configuration для фронтенда
VITE_API_BASE_URL=http://localhost:3002
VITE_USERS_API_URL=http://localhost:3002
VITE_GATEWAY_API_URL=http://localhost:3000

# Development
VITE_ENV=development

# =============================================================================
# PRODUCTION SETTINGS (раскомментировать для production)
# =============================================================================

